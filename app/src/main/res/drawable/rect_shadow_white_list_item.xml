<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->

    <item>
        <shape>
            <padding android:top="0dp" android:right="3dp" android:bottom="4dp" android:left="0dp" />
            <solid android:color="@color/grey" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>