<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/parent_side_tool_bar" />

    <RelativeLayout
        android:id="@+id/rlaHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLayout"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginTop="@dimen/fifteen"
            android:text="Leave Request Info"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:id="@+id/rlaMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginEnd="@dimen/ten"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/five">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ten"
                android:text="April"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/imgDown"
                android:layout_width="@dimen/twenty_five"
                android:layout_height="@dimen/twenty_five"
                android:src="@drawable/ic_down_arrow"></ImageView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlaMonth"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/mild_grey2"
            android:orientation="horizontal"
            android:padding="@dimen/ten"
            android:weightSum="3">

            <TextView
                style="@style/CustomTextStyleAttendanceReportDashBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="From"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                style="@style/CustomTextStyleAttendanceReportDashBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="To"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                style="@style/CustomTextStyleAttendanceReportDashBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Status"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcyLeaveRequestHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnrStatusBar"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginEnd="@dimen/ten">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlaCreateLeaveRequest"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLayout"
        android:background="@drawable/rect_white_light_radious"
        android:padding="@dimen/ten">


        <TextView
            android:id="@+id/lblStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:text="@string/Start"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rytStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblStart"
            android:layout_marginTop="@dimen/ten">

            <RelativeLayout
                android:id="@+id/rytStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardStart"
                    android:layout_width="@dimen/sixty"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_height="@dimen/sixty"
                    app:cardCornerRadius="@dimen/ten">

                    <LinearLayout
                        android:id="@+id/lnrStartCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_stroke_rect_black"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/five"
                            android:text="Fri"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/primary_light"
                            android:gravity="center"
                            android:text="12"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/imgDateDown"
                    android:layout_width="@dimen/twenty"
                    android:layout_height="@dimen/twenty"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/cardStart"
                    android:src="@drawable/ic_down_arrow" />


                <TextView
                    android:id="@+id/txtStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_toEndOf="@+id/imgDateDown"
                    android:text="2024 Dec, 04"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp" />


            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/lblEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rytStart"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:text="@string/End"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rytEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblEnd"
            android:layout_marginTop="@dimen/ten">

            <RelativeLayout
                android:id="@+id/rytEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEnd"
                    android:layout_width="@dimen/sixty"
                    android:layout_height="@dimen/sixty"
                    android:layout_marginStart="@dimen/ten"
                    app:cardCornerRadius="@dimen/ten">

                    <LinearLayout
                        android:id="@+id/lnrEndCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_stroke_rect_black"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblEndDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/five"
                            android:text="Fri"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/primary_light"
                            android:gravity="center"
                            android:text="12"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <ImageView
                    android:id="@+id/imgDateDown1"
                    android:layout_width="@dimen/twenty"
                    android:layout_height="@dimen/twenty"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/cardEnd"
                    android:src="@drawable/ic_down_arrow" />

                <TextView
                    android:id="@+id/txtEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_toEndOf="@+id/imgDateDown1"
                    android:text="2024 Dec, 04"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/lblTotalDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rytEndDate"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/twenty"
                android:text="3 Days"
                style="@style/CustomTextStylePoppinsBold"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/lblEventDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTotalDays"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginStart="@dimen/ten"
                android:text="Reason"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblEventDesc"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:background="@drawable/bg_stroke_rect_black"
                android:paddingHorizontal="@dimen/ten"
                android:paddingVertical="@dimen/thirty"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp" />

            <TextView
                android:id="@+id/lbTextCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDesc"
                android:layout_alignParentEnd="true"
                android:text="0 of 500"
                android:layout_marginEnd="@dimen/ten"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/rytADD"
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/seventy"
                android:layout_below="@+id/txtDesc"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginStart="@dimen/ten"
                android:background="@drawable/rect_light_blue">

                <ImageView
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_plus" />

            </RelativeLayout>



            <TextView
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourty"
                android:layout_below="@+id/rytADD"
                android:layout_marginTop="@dimen/thirty"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:background="@drawable/rect_btn_orange"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold" />



        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>