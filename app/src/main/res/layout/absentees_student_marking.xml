<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/lnrHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:orientation="horizontal"
            android:background="@drawable/rect_light_blue"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/lblName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/ten"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/twele_sp" />


            <TextView
                android:id="@+id/lblRollNo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/five"
                android:paddingVertical="@dimen/five"
                android:text="@string/roll_no"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/twele_sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten"
                android:text="@string/status"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/twele_sp" />


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/lnrHeader"
            android:id="@+id/recycleStudents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/attendance_student_list" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>