<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <RelativeLayout
        android:id="@+id/rlaLbCommunication"
        android:layout_width="match_parent"
        android:layout_height="@dimen/eighty"
        android:background="@color/primary_light"
        android:paddingBottom="@dimen/thirty">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/twenty_five"
            android:layout_height="@dimen/twenty_five"
            android:layout_marginStart="@dimen/eighteen"
            android:layout_marginTop="@dimen/twenty_five"
            android:src="@drawable/arrow_back_black">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sixty"
            android:layout_marginTop="@dimen/twenty_five"
            android:text="Absentees Students"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen"
            android:textStyle="normal">
        </TextView>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/studendreport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlaLbCommunication"
        android:layout_marginTop="@dimen/fifteen">
    </androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/rytSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirty_five"
        android:layout_margin="@dimen/ten"
        android:layout_marginStart="@dimen/ten"
        android:layout_below="@+id/studendreport"
        android:background="@drawable/rect_grey">


        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/ten"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/txtSearchMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/imgSearch"
            android:background="@android:color/transparent"
            android:hint="@string/lblSearch"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/studentlistreport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rytSearch"
        android:layout_marginTop="@dimen/fifteen">
    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>