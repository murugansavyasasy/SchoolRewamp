<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Teacher_spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem"></style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="IndicatorStyle">
        <item name="ci_width">8dp</item>
        <item name="ci_height">8dp</item>
        <item name="ci_margin">6dp</item>
        <item name="ci_drawable">@drawable/indicator_active</item>
        <item name="ci_drawable_unselected">@drawable/indicator_inactive</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_to_top</item>
    </style>

    <!-- styles.xml -->
    <style name="CustomTextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/american_typewriter_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>




</resources>