<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#A5D6A7"/> <!-- Green background -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#A5D6A7"/> <!-- Stroke matches background -->
            <padding android:left="16dp" android:right="16dp"/>
        </shape>
    </item>

    <!-- Unselected state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Black border -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <padding android:left="16dp" android:right="16dp"/>
        </shape>
    </item>

</selector>
