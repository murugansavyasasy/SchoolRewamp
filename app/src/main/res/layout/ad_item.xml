<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAdImages"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_ten"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginStart="@dimen/twenty"
            android:layout_marginEnd="@dimen/twenty"
            android:orientation="horizontal"
            tools:listitem="@layout/ad_image_item" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ten"
            android:layout_below="@+id/recyclerViewAdImages"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/twenty">

            <TextView
                android:id="@+id/lblSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ten"
                android:text="@string/SeeAll"
                android:textColor="@color/navi_blue1"
                android:textSize="@dimen/fifteen"
                android:textStyle="normal">

            </TextView>

            <View
                android:layout_width="@dimen/sixty"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lblSeeMore"
                android:background="@color/navi_blue1">

            </View>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/dotContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerViewAdImages"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ten"
            android:orientation="horizontal"
            android:padding="@dimen/five" />

        <LinearLayout
            android:id="@+id/rlaMenuExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dotContainer"
            android:layout_marginTop="@dimen/fifteen"
            android:orientation="horizontal"
            android:padding="@dimen/ten"
            android:visibility="visible"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lnrAssignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:layout_weight="1"
                android:background="@drawable/gradient_background_dashboard_purple"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:layout_marginTop="@dimen/ten"
                    android:src="@drawable/assignment_icon">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/five"
                    android:text="Assignment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrLeaveRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:layout_weight="1"
                android:background="@drawable/gradient_background_dashboard_purple_light_orange"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:layout_marginTop="@dimen/ten"
                    android:src="@drawable/leave_request_icon"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/five"
                    android:text="Leave Request"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrHomeWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:layout_weight="1"
                android:background="@drawable/gradient_background_dashboard_purple_light_green"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:layout_marginTop="@dimen/ten"
                    android:src="@drawable/home_work_icon">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/five"
                    android:text="Home Work"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>