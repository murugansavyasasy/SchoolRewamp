<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:id="@+id/lytName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/ten">

        <!-- Circular Initial Avatar -->
        <RelativeLayout
            android:id="@+id/fytFirstLetter"
            android:layout_width="@dimen/fourty"
            android:layout_height="@dimen/fourty"
            android:layout_marginEnd="@dimen/ten"
            android:gravity="center">

            <TextView
                android:id="@+id/lblFirstLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="A"
                android:textColor="@android:color/black"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Name and Details Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajith Kumar"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Down Arrow Animation -->
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/fourty"
            android:layout_marginEnd="@dimen/thirty"
            android:padding="@dimen/five"
            android:src="@drawable/ic_down_round" />

        <!-- Custom Checkbox -->
        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fifteen"
            android:button="@drawable/custom_checkbox" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyStudentRoleNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lytName"
        android:layout_marginStart="@dimen/fifty"
        android:layout_marginEnd="@dimen/thirty"
        android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rcyStudentRoleNumber"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:background="@color/light_gray_">

    </View>
</RelativeLayout>
