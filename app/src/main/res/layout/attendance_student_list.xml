<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/ten"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/lnrHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lblName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:text="Murugan"
            android:padding="@dimen/ten"
            android:textColor="@color/black"
            android:textSize="@dimen/twele_sp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/rect_light_blue"
            android:padding="@dimen/five"
            android:layout_marginHorizontal="@dimen/five">



        <TextView
            android:layout_gravity="center"
            android:id="@+id/lblRollNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="111"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/twele_sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrPresent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/five"
            android:layout_marginHorizontal="@dimen/five"
            android:background="@drawable/rect_green_stroke"
           android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:background="@drawable/circle_bg_green"/>

            <TextView
                android:layout_marginStart="@dimen/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present"
                android:textColor="@color/green"
                android:textSize="@dimen/twele_sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lnrAbsent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/five"
            android:layout_marginHorizontal="@dimen/five"
            android:background="@drawable/rect_red_stroke"
            android:layout_gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_toStartOf="@+id/imgAbsent"
                android:id="@+id/lblAbsent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absent"
                android:textColor="@color/red"
                android:textSize="@dimen/twele_sp" />

            <TextView
                android:id="@+id/imgAbsent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/five"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:background="@drawable/circle_bg_red"/>


        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginHorizontal="@dimen/ten"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/lnrHeader" />


</androidx.constraintlayout.widget.ConstraintLayout>