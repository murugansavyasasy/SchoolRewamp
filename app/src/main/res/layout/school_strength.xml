<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rytHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_light"
            android:padding="@dimen/ten">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:src="@drawable/arrow_back_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:text="School Strength"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty_sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlaPieChartCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rytHeader"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginEnd="@dimen/ten"
            android:padding="@dimen/twenty"
            android:background="@drawable/rect_shadow_white">

            <com.vs.schoolmessenger.Utils.PieChartView
                android:id="@+id/customPieChart"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/twenty"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/ten"/>

            <LinearLayout
                android:id="@+id/data_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <!-- Students -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/teal"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/students_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students - 543"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- Staff -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp">

                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/red"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/students_data1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Staff - 63"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- Total -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp">

                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/yellow"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/students_data2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total - 606"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="13sp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rect_light_blue1"
            android:layout_below="@+id/rlaPieChartCount"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginEnd="@dimen/ten"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9th Standard"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="@dimen/ten"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/header2"
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/five"
                android:layout_marginEnd="@dimen/ten"
                android:layout_marginBottom="@dimen/five"
                android:src="@drawable/downarrow"/>
        </LinearLayout>

        <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
            android:id="@+id/aa_chart_view"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/linear_layout2"
            android:layout_marginTop="@dimen/three"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginEnd="@dimen/ten"/>

    </RelativeLayout>

</ScrollView>
