<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:layout_marginBottom="@dimen/ten"
        android:background="@drawable/rect_shadow_white"
        android:gravity="center_vertical"
        android:padding="@dimen/twenty">

        <RelativeLayout
            android:id="@+id/linear_layout0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custom_rounded_green_background"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/certificate_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Approved"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="normal" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout0"
            android:layout_marginTop="@dimen/ten"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/certificatetype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Certificate Type"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/certificate_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=": Attendance Type"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="normal"
                android:gravity="start"
                android:maxLines="3"
                android:ellipsize="end" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout"
            android:layout_marginTop="@dimen/thirteen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblReason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reason"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reason_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=": I need this  to apply for the education loan for my studies"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="normal"
                android:gravity="start"
                android:maxLines="100"
                android:ellipsize="end" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout1"
            android:layout_marginTop="@dimen/thirteen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/created_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Created On"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/created_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=": 21 Jan 2024"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="normal"
                android:gravity="start"
                android:maxLines="100"
                android:ellipsize="end" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/linear_layout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linear_layout2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/download_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Download"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:textColor="@color/sky_blue0"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>



    </RelativeLayout>
</RelativeLayout>