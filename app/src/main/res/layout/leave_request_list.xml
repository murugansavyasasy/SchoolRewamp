<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rlaLeaveRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five"
        android:background="@drawable/rect_shadow_white">


        <LinearLayout
            android:id="@+id/lblLeaveInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/five"
                android:layout_marginEnd="@dimen/ten"
                android:text="Apr 2 1000"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:gravity="center_vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Name"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_weight="0.5"
                    android:text="Sathish"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:gravity="center_vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Section"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_weight="0.5"
                    android:text="XII - B"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:gravity="center_vertical"
                android:weightSum="3">

                <TextView
                    android:id="@+id/lblFromData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Mar 31, 2023"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twenty"
                    android:layout_weight="1"
                    android:src="@drawable/leave_level"></ImageView>

                <TextView
                    android:id="@+id/lblToDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Apr 2 -2023"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:padding="@dimen/five"
                android:text="The reason for my leave is [brief reason for leave, such as personal reasons, family emergency, etc.]. During my absence, I will ensure that all pending tasks are completed or delegated to a colleague. In case of any urgent matters, I can be reached at [your contact details]. I kindly request you to approve my leave."
                android:textColor="@color/black"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblLeaveInformation"
            android:layout_margin="@dimen/ten"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty"
                android:layout_marginEnd="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/bg_green_radoius_10dp"
                android:gravity="center"
                android:padding="@dimen/five">

                <ImageView
                    android:id="@+id/imgChecked"
                    android:layout_width="@dimen/twenty"
                    android:layout_height="@dimen/twenty"
                    android:layout_marginEnd="@dimen/ten"
                    android:src="@drawable/checked"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imgChecked"
                    android:text="Approval"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty"
                android:layout_marginEnd="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/bg_red_radious__all_side_same"
                android:gravity="center"
                android:padding="@dimen/five">

                <ImageView
                    android:id="@+id/imgReject"
                    android:layout_width="@dimen/twenty"
                    android:layout_height="@dimen/twenty"
                    android:layout_marginEnd="@dimen/ten"
                    android:src="@drawable/close_icon_red"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imgReject"
                    android:text="Reject"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>