<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/rect_shadow_white"
        android:layout_marginStart="-10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">

<!--        <ImageView-->

<!--            android:layout_width="@dimen/twenty"-->
<!--            android:layout_height="250dp"-->
<!--            android:layout_marginTop="@dimen/twenty"-->
<!--            android:elevation="10dp"-->
<!--            android:src="@drawable/spiral_icon">-->
<!--            -->
<!--        </ImageView>-->

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/fourty"
            android:layout_height="0dp"
            android:elevation="@dimen/ten"
            android:scaleType="fitCenter"
            android:src="@drawable/spiral_icon"
            app:layout_constraintBottom_toBottomOf="@+id/rlaNames"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:id="@+id/rlaNames"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgIcon"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/lblTitle"
                style="@style/CustomTextStylePoppinsBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginTop="@dimen/ten"
                android:text="Physics Assignment"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:id="@+id/lnrSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTitle"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_weight="0.6"
                    android:text="@string/subject"
                    android:textColor="@color/navi_blue3"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/lblSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_weight="0.5"
                    android:text="Sathguaefgi[aosihsdfnsnnvsipsguhpsoifjsfnugtotuweituaoiffs[fknmpsuhfpawuhg[woigjaporng[aorghpiwgwpoia[orignarjbfbpyweff[aojnfisffgpiaeff[f;kniSFbfpiyfhioefhipwyafFNgkgnrfbfpwiugish"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnrCategotry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrSubject"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_weight="0.6"
                    android:text="@string/category"
                    android:textColor="@color/navi_blue3"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/lblCategotry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_weight="0.5"
                    android:text="Ganesan"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnrSubmissionDue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrCategotry"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_weight="0.6"
                    android:text="@string/submission_due"
                    android:textColor="@color/navi_blue3"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/lblSubmissionDue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_weight="0.5"
                    android:text="Abi"
                    android:textColor="@color/red"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnrsubmissionCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrSubmissionDue"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_weight="0.6"
                    android:text="@string/submission_count"
                    android:textColor="@color/navi_blue3"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/lblSubmissionCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_weight="0.5"
                    android:text="Abi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnrSendBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrsubmissionCount"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_weight="0.6"
                    android:text="@string/send_by"
                    android:textColor="@color/navi_blue3"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/lblSendby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_weight="0.5"
                    android:text="Abi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>


            <TextView
                android:id="@+id/lblDateAndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrSendBy"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:text="Apr 1, 2024. 11:12 AM"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold">

            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblDateAndTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginBottom="@dimen/ten">

                <TextView
                    android:id="@+id/btnView"
                    android:layout_width="@dimen/eighty"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_green_radoius_10dp"
                    android:gravity="center"
                    android:padding="@dimen/five"
                    android:text="@string/view"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold">

                </TextView>


                <TextView
                    android:id="@+id/btnSubmit"
                    android:layout_width="@dimen/eighty"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twenty"
                    android:layout_toEndOf="@+id/btnView"
                    android:background="@drawable/bg_red_radious__all_side_same"
                    android:gravity="center"
                    android:padding="@dimen/five"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold">

                </TextView>

            </RelativeLayout>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
