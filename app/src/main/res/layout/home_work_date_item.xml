<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlaDateItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/twenty"
        android:background="@drawable/rect_black_outline"
        android:padding="@dimen/ten">


        <ImageView
            android:id="@+id/imgCalender"
            android:layout_width="@dimen/twenty_five"
            android:layout_height="@dimen/twenty_five"
            android:layout_marginStart="@dimen/ten"
            android:src="@drawable/calendar_homework"></ImageView>

        <TextView
            android:id="@+id/lblDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/CustomTextStylePoppinsBold"
            android:layout_marginStart="@dimen/ten"
            android:layout_toStartOf="@+id/imgDown"
            android:layout_toEndOf="@+id/imgCalender"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold">

        </TextView>


        <ImageView
            android:id="@+id/imgDown"
            android:layout_width="@dimen/twenty_five"
            android:layout_height="@dimen/twenty_five"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/ten"
            android:src="@drawable/arrow_down_round"></ImageView>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyHomeWorkItem"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/twenty_five"
        android:layout_marginEnd="@dimen/twenty_five"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlaDateItem">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>