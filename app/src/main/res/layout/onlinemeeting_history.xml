<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/twenty"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginEnd="@dimen/twenty"
        android:background="@drawable/rect_shadow_white"
        app:cardCornerRadius="@dimen/eight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblView"
                android:layout_width="@dimen/five"
                android:layout_height="match_parent"
                android:background="@color/light_dark_blue">

            </TextView>

            <LinearLayout
                android:id="@+id/lnrView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_sky_blue1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:text="Parent Meeting"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1.3">

                    <TextView
                        android:id="@+id/lblDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_weight="0.4"
                        android:text="Wen 12, 2024"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/lblTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="12:12 AM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="normal">

                    </TextView>

                    <ImageView
                        android:id="@+id/imgReminder"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/thirty"
                        android:layout_weight="0.5"
                        android:src="@drawable/remainder_icon">

                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_weight="0.6"
                        android:text="Meeting type   : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/lblMeetingType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Zoom Meeting"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/lblLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginBottom="@dimen/ten"
                    android:text="https://meet.google.com/mnd-tpqm-gbb"
                    android:textColor="@color/sky_blue0"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>