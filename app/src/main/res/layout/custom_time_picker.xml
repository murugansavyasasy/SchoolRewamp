<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_white_light_radious">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/fifteen">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/eight"
            android:text="Select Time"
            android:layout_centerHorizontal="true"
            android:textColor="@color/dark_blue_and_green_"
            android:textSize="@dimen/fifteen_sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/lnrTimeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="Hour"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="Minute"
                android:textSize="@dimen/fifteen_sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrTimePicking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/ten"
            android:layout_below="@+id/lnrTimeTitle"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hourSpinner"
                android:layout_width="@dimen/eighty"
                android:layout_height="@dimen/one_fifty"
                android:layout_marginEnd="@dimen/ten" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/ten"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/minuteSpinner"
                android:layout_width="@dimen/hundred"
                android:layout_height="@dimen/one_fifty"
                android:layout_marginEnd="@dimen/ten" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ampmSpinner"
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/one_fifty"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_below="@+id/lnrTimePicking"
            android:orientation="horizontal"
            android:paddingTop="@dimen/fifteen">


            <RelativeLayout
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlaVoiceHistory"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:padding="@dimen/ten">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/five"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_sp"></TextView>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlaVoiceHistory"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:background="@drawable/rect_blue_and_green_small_radious"
                android:padding="@dimen/ten">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/five"
                    android:text="Done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_sp"></TextView>
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>
