<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/twenty">

    <RelativeLayout
        android:id="@+id/lblSelectLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="@dimen/twenty"
            android:layout_height="@dimen/twenty"
            android:src="@drawable/close_icon_without_bg">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_toEndOf="@+id/imgClose"
            android:text="@string/lblSelectlanguage"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlaLanguageSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblSelectLanguage">


        <RelativeLayout
            android:id="@+id/rlaEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five"
            android:layout_marginTop="@dimen/twenty"
            android:padding="@dimen/five">

            <CheckBox
                android:id="@+id/chEnglish"
                style="@style/CustomCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/five"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                tools:ignore="MissingConstraints" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/chEnglish">

                <TextView
                    android:id="@+id/lblEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/lblEnglish"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblEnglish"
                    android:text="@string/lblEnglish"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:visibility="gone"></TextView>

                <ImageView
                    android:id="@+id/imgEnglish"
                    android:layout_width="@dimen/fourty"
                    android:layout_height="@dimen/fourty"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/en_language_gray">

                </ImageView>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rlaEnglish"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/grey">

        </View>


        <RelativeLayout
            android:id="@+id/rlaTamil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlaEnglish"
            android:layout_marginStart="@dimen/five"
            android:layout_marginTop="@dimen/twenty"
            android:padding="@dimen/five">

            <CheckBox
                android:id="@+id/chTamil"
                style="@style/CustomCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/five"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                tools:ignore="MissingConstraints" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/chTamil">

                <TextView
                    android:id="@+id/lblTamil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblTamil1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTamil"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/lblTamil"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"></TextView>

                <ImageView
                    android:id="@+id/imgTamil"
                    android:layout_width="@dimen/fourty"
                    android:layout_height="@dimen/fourty"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ta_language_gray">

                </ImageView>
            </RelativeLayout>
        </RelativeLayout>


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rlaTamil"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rlaThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlaTamil"
            android:layout_marginStart="@dimen/five"
            android:layout_marginTop="@dimen/twenty"
            android:padding="@dimen/five">

            <CheckBox
                android:id="@+id/chThai"
                style="@style/CustomCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/five"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                tools:ignore="MissingConstraints" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/chThai">

                <TextView
                    android:id="@+id/lblThai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblThai1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblThai"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/lblThai"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"></TextView>

                <ImageView
                    android:id="@+id/imgThai"
                    android:layout_width="@dimen/fourty"
                    android:layout_height="@dimen/fourty"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/th_language_gray">

                </ImageView>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rlaThai"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/grey"></View>

        <RelativeLayout
            android:id="@+id/rlaHindi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlaThai"
            android:layout_marginStart="@dimen/five"
            android:layout_marginTop="@dimen/twenty"
            android:padding="@dimen/five">

            <CheckBox
                android:id="@+id/chHindi"
                style="@style/CustomCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/five"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                tools:ignore="MissingConstraints" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/chHindi">

                <TextView
                    android:id="@+id/lblHindi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblHindi1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblHindi"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/lblHindi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"></TextView>

                <ImageView
                    android:id="@+id/imgHindi"
                    android:layout_width="@dimen/fourty"
                    android:layout_height="@dimen/fourty"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/hi_language_gray">

                </ImageView>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rlaHindi"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:background="@color/grey"></View>
    </RelativeLayout>


    <TextView
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlaLanguageSelect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/twenty"
        android:background="@drawable/rect_btn_orange"
        android:padding="@dimen/eight"
        android:text="@string/lblConfirm"
        android:textColor="@color/white"
        android:textStyle="bold">

    </TextView>
</RelativeLayout>
