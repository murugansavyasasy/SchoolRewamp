<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/ten"
    android:layout_marginTop="@dimen/ten">

    <RelativeLayout
        android:layout_width="@dimen/one_seventy"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_shadow_white">


        <ImageView
            android:id="@+id/imgSubjectList"
            android:layout_width="@dimen/hundred"
            android:layout_height="@dimen/hundred"
            android:layout_centerHorizontal="true"
            android:src="@drawable/exam_subject_icon">
        </ImageView>


        <TextView
            android:id="@+id/lblSubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgSubjectList"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginEnd="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:text="Tamil"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

</RelativeLayout>