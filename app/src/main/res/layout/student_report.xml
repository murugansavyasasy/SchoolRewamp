<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rytHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:padding="@dimen/ten">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginEnd="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:src="@drawable/arrow_back_black"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@dimen/fifteen"
            android:text="@string/StudentReport"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rytSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirty_five"
        android:layout_below="@+id/rytHeader"
        android:layout_margin="@dimen/ten"
        android:background="@drawable/rect_grey">


        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ten"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/txtSearchMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/imgSearch"
            android:background="@android:color/transparent"
            android:hint="@string/lblSearch"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnrSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rytSearch"
        android:layout_marginStart="@dimen/two"
        android:layout_marginEnd="@dimen/two"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/rlaSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/rect_shadow_white"
            android:padding="@dimen/five">

            <ImageView
                android:id="@+id/imgSort"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ten"
                android:src="@drawable/filter_icon">

            </ImageView>

            <TextView
                android:id="@+id/dropdownTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fifteen"
                android:layout_toEndOf="@+id/imgSort"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:gravity="center_vertical"
                android:padding="@dimen/five"
                android:textSize="@dimen/thirteen_sp"
                android:text="Get all student"
                android:textColor="@color/black" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlaStandard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/rect_shadow_white"
            android:padding="@dimen/ten">


            <ImageView
                android:id="@+id/imgStandardSort"
                android:layout_width="@dimen/twenty_five"
                android:layout_height="@dimen/twenty_five"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/lblStandard"
                android:src="@drawable/down_arrow_black">

            </ImageView>

            <TextView
                android:id="@+id/lblStandard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/twenty"
                android:text="XII - B"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rlaStandardPicking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnrSort"
        android:visibility="gone">

        <TextView
            android:id="@+id/lblStandardPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:text="Standard"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/dropdownTextViewStandard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblStandardPick"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_marginEnd="@dimen/fifteen"
            android:background="@drawable/rect_shadow_white"
            android:drawableEnd="@drawable/drop_down_blue"
            android:gravity="center_vertical"
            android:padding="@dimen/ten"
            android:text="XII"
            android:textColor="@color/navi_blue2"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lblSectionPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dropdownTextViewStandard"
            android:layout_marginStart="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:text="Section"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/dropdownTextViewSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblSectionPick"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_marginEnd="@dimen/fifteen"
            android:background="@drawable/rect_shadow_white"
            android:drawableEnd="@drawable/drop_down_blue"
            android:gravity="center_vertical"
            android:padding="@dimen/ten"
            android:text="B"
            android:textColor="@color/navi_blue2"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyStudentReport"
        android:layout_width="match_parent"
        android:layout_below="@+id/rlaStandardPicking"
        android:layout_marginTop="@dimen/ten"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>