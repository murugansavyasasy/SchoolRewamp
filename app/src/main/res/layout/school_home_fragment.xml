<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lblGif"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="@drawable/gradient_theme_school" />
        </FrameLayout>


        <RelativeLayout
            android:id="@+id/rlaSchoolDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:paddingVertical="@dimen/twenty"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgSchoolLogo"
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:layout_centerVertical="true"
                android:src="@drawable/profile_student" />

            <RelativeLayout
                android:id="@+id/rytSchoolDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten"
                android:layout_toStartOf="@+id/imgSearchClick"
                android:layout_toEndOf="@+id/imgSchoolLogo">


                <TextView
                    android:id="@+id/lblSchoolName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Savyasasy software solutions pvt Ltd.,"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblSchoolAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblSchoolName"
                    android:text="Savyasasy schools, Chennai  600043"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/imgSearchClick"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:layout_toStartOf="@+id/rytImageNotification"
                android:src="@drawable/search_icon"
                android:visibility="visible">

            </ImageView>

            <FrameLayout
                android:id="@+id/rytImageNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/lblNotificationCount"
                    android:layout_width="@dimen/twenty_five"
                    android:layout_height="@dimen/twenty_five"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_red_small_size"
                    android:elevation="@dimen/ten"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgNotification"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:src="@drawable/notification_icon" />

            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlaAttendanceReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlaSchoolDetail"
            android:layout_marginStart="@dimen/twenty"
            android:layout_marginEnd="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:background="@drawable/rect_white_light_radious"
            android:elevation="10dp"
            android:padding="@dimen/fifteen">

            <TextView
                android:id="@+id/lblReportAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance Report"
                style="@style/CustomTextStyleAttendanceReportDashBoard"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                >

            </TextView>

            <TextView
                android:id="@+id/lblDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblReportAttendance"
                android:text="01, May 2025"
                style="@style/CustomTextStyleAttendanceReportDashBoardRegular"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/ten"
                android:textSize="@dimen/thirteen_sp"
                >

            </TextView>

            <TextView
                android:id="@+id/lblViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblReportAttendance"
                android:layout_alignParentEnd="true"
                android:text="View Details"
                android:textColor="@color/navi_blue1"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="normal">

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlaAttendanceReport"
            android:layout_marginTop="-30dp"
            android:background="@drawable/rounded_top_corners">


            <RelativeLayout
                android:id="@+id/rytSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thirty_five"
                android:layout_marginStart="@dimen/twenty"
                android:layout_marginTop="@dimen/thirty_five"
                android:layout_marginEnd="@dimen/twenty"
                android:background="@drawable/rect_grey"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/ten"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:id="@+id/txtSearchMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/imgSearch"
                    android:background="@android:color/transparent"
                    android:hint="@string/lblSearch"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/lblCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rytSearch"
                android:layout_marginStart="@dimen/twenty"
                android:layout_marginTop="@dimen/thirty_five"
                android:text="Categories"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMenus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/lblCategories"
                android:background="@color/white"
                tools:listitem="@layout/menu_item_card" />

        </RelativeLayout>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
