<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:background="@drawable/rect_shadow_white">


        <RelativeLayout
            android:id="@+id/lnrStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:padding="@dimen/five">

            <TextView
                android:id="@+id/lblFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="From"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/lblTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="To"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold">

            </TextView>

            <RelativeLayout
                android:id="@+id/rlaStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_red_radious__all_side_same">

                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="@dimen/twenty_five"
                    android:layout_height="@dimen/twenty_five"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/five"
                    android:src="@drawable/close_icon_red">

                </ImageView>

                <TextView
                    android:id="@+id/lblStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_toEndOf="@+id/imgStatus"
                    android:padding="@dimen/five"
                    android:text="Status"
                    android:textColor="@color/white"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </RelativeLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/lblReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnrStatusBar"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginEnd="@dimen/ten"
            android:maxLines="3"
            android:text="If you're working in a collaborative environment, stashing and pulling is often the safest option, as it allows you to integrate your work with the latest changes without losing progress."
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tvSeeMoreImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblReason"
            android:layout_marginStart="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:text="@string/SeeMore"
            android:textColor="@android:color/holo_blue_dark"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="@dimen/twenty"
            android:layout_height="@dimen/twenty"
            android:layout_below="@+id/lblReason"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginEnd="@dimen/fifteen"
            android:layout_marginBottom="@dimen/ten"
            android:src="@drawable/edit_icon_1">

        </ImageView>


    </RelativeLayout>

</RelativeLayout>