<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/parent_side_tool_bar" />


    <LinearLayout
        android:id="@+id/lnrCommunicationIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLayout"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/ten"
        android:orientation="horizontal"
        android:weightSum="2">


        <RelativeLayout
            android:id="@+id/rlaVoiceMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_gradient_redious_parent">

            <ImageView
                android:id="@+id/imgVoiceMessage"
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/ten"
                android:src="@drawable/mic_icon">

            </ImageView>

            <TextView
                android:id="@+id/lblVoiceMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgVoiceMessage"
                android:layout_marginTop="@dimen/five"
                android:gravity="center"
                android:paddingStart="@dimen/five"
                android:paddingEnd="@dimen/five"
                android:paddingBottom="@dimen/ten"
                android:text="Voice"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlaTextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgTextMessage"
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/ten"
                android:src="@drawable/text_icon_black">

            </ImageView>

            <TextView
                android:id="@+id/lblTextMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgTextMessage"
                android:layout_marginTop="@dimen/five"
                android:gravity="center"
                android:paddingStart="@dimen/five"
                android:paddingEnd="@dimen/five"
                android:paddingBottom="@dimen/ten"
                android:text="Text"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rytSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirty_five"
        android:layout_margin="@dimen/ten"
        android:layout_marginStart="@dimen/ten"
        android:layout_below="@+id/lnrCommunicationIcon"
        android:layout_alignStart="@+id/lnrCommunicationIcon"
        android:layout_alignEnd="@+id/lnrCommunicationIcon"
        android:background="@drawable/rect_grey">


        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/ten"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/txtSearchMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/imgSearch"
            android:background="@android:color/transparent"
            android:hint="@string/lblSearch"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlaCommunicationData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:layout_below="@+id/rytSearch">

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>