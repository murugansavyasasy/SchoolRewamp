<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlaTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/thirty_five"
            android:layout_height="@dimen/thirty_five"
            android:src="@drawable/arrow_back_black">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/ten"
            android:layout_toEndOf="@+id/imgBack"
            android:text="Select Recipient"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>


    <TextView
        android:id="@+id/sendlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlaTitle"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/twenty"
        android:text="Send To :"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendlabel"
        android:layout_alignStart="@id/sendlabel"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginEnd="@dimen/five"
        android:background="@drawable/tab_background"
        app:tabBackground="@drawable/tab_selector"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabRippleColor="@android:color/transparent"
        app:tabTextAppearance="@style/TabTextStyle" />


    <TextView
        android:id="@+id/grouplabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabLayout"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/twenty"
        android:text="Group"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rlaStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grouplabel"
        android:layout_marginStart="@dimen/fifteen"
        android:layout_marginTop="@dimen/twenty_five"
        android:layout_marginEnd="@dimen/fifteen"
        android:background="@drawable/bg_stroke_rect_black"
        android:padding="@dimen/ten"
        android:visibility="gone">


        <ImageView
            android:id="@+id/imgStandard"
            android:layout_width="@dimen/twenty_five"
            android:layout_height="@dimen/twenty_five"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ten"
            android:src="@drawable/ic_down_arrow">

        </ImageView>

        <TextView
            android:id="@+id/lblStandard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/fifteen"
            android:fontFamily="@font/poppins_bold"
            android:text="Select Standard"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlaStandard"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:layout_marginBottom="@dimen/fifty"
        android:background="@drawable/rect_white_light_radious"
        android:visibility="gone">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rlaSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView"
        android:layout_marginStart="@dimen/fifteen"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="@dimen/fifteen"
        android:background="@drawable/bg_stroke_rect_black"
        android:padding="@dimen/ten"
        android:visibility="gone">


        <ImageView
            android:id="@+id/imgSubject"
            android:layout_width="@dimen/twenty_five"
            android:layout_height="@dimen/twenty_five"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ten"
            android:src="@drawable/ic_down_arrow">

        </ImageView>

        <TextView
            android:id="@+id/lblSuibject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/fifteen"
            android:fontFamily="@font/poppins_bold"
            android:text="Select Subject"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>


    <!-- Container for description and buttons -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/five"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/five">

        <TextView
            android:id="@+id/textdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:padding="16dp"
            android:text="Click the SEND button to send an important announcement from Entier School"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnViewMarks"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_orange"
                android:gravity="center"
                android:text="Send"
                android:textColor="@color/white"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnViewProgress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_orange"
                android:gravity="center"
                android:text="Specific Student"
                android:textColor="@color/white"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
