<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_fifty"
            android:layout_marginTop="@dimen/fifty"
            android:adjustViewBounds="true"
            android:src="@drawable/login_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome aboard!"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:gravity="center"
            android:text="Seamless school communication, anytime, anywhere, effortlessly connecting student, teachers, and parents at all times."
            android:textColor="@color/black"
            android:textStyle="normal"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_top_radious">

            <RelativeLayout
                android:id="@+id/rytMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_five"
                    android:gravity="center"
                    android:text="Let's Get Started!"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="@dimen/twenty_sp" />

                <TextView
                    android:id="@+id/lblMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblLogin"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginEnd="@dimen/ten"
                    android:text="@string/lblMobileNumber"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/fifteen_sp" />

                <RelativeLayout
                    android:id="@+id/rytMobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_below="@+id/lblMobile"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginEnd="@dimen/ten"
                    android:background="@drawable/rect_white">

                    <ImageView
                        android:id="@+id/imgMobile"
                        android:layout_width="@dimen/twenty_five"
                        android:layout_height="@dimen/twenty_five"
                        android:layout_centerVertical="true"
                        android:src="@drawable/mobile"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/vwMobile"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/ten"
                        android:layout_marginStart="@dimen/ten"
                        android:layout_toEndOf="@+id/imgMobile"
                        android:background="@color/mild_grey1"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/txtMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/vwMobile"
                        android:background="@null"
                        android:hint="00000-00000"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingHorizontal="@dimen/ten"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textColorHint="@color/light_gray_"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="normal"/>


                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnLoginContinue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_below="@+id/rytMobile"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginTop="@dimen/thirty"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    card_view:cardCornerRadius="@dimen/ten"
                    card_view:cardElevation="@dimen/five">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rect_btn_blue"
                        android:gravity="center"
                        android:text="Continue"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"/>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
