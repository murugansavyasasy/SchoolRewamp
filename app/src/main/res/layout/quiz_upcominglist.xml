<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/five"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:background="@drawable/rect_shadow_white">

        <RelativeLayout
            android:id="@+id/rlaAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/quizname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginEnd="@dimen/twenty_five"
                android:gravity="start"
                android:text="@string/online_quiz"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_bold">

            </TextView>

            <TextView
                android:id="@+id/quizdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quizname"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/fifteen"
                android:layout_marginTop="@dimen/ten"
                android:text="Play Quiz games to improve the learning in a funnier way it will reduce the stress and improve the brain activities "
                android:textColor="@color/black"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium">

            </TextView>

            <TextView
                android:id="@+id/subjectvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quizdescription"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginTop="@dimen/eight"
                android:text="Subject : Tamil"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="normal">

            </TextView>

            <TextView
                android:id="@+id/playnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subjectvalue"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/fifteen"
                android:text="@string/play_now"
                android:textColor="@color/sky_blue0"
                android:textSize="@dimen/thirteen_sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="@dimen/ten">
            </TextView>

            <ImageView
                android:id="@+id/playnow2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_below="@+id/subjectvalue"
                android:layout_marginStart="6dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/video_play"
                android:layout_toEndOf="@+id/playnow"
                android:layout_marginBottom="@dimen/ten">
            </ImageView>


            <TextView
                android:id="@+id/qustionsvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subjectvalue"
                android:layout_marginTop="@dimen/fifteen"
                android:text="15 Questions"
                android:textColor="@color/grey"
                android:layout_alignParentEnd="true"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginEnd="@dimen/ten"
                android:layout_marginBottom="@dimen/ten">
            </TextView>

            <TextView
                android:id="@+id/lblAttendanceStatus"
                android:layout_width="@dimen/eighty"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/rounded_top_left_bottom_end_red"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="Level 1"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_bold">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>