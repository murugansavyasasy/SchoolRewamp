<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/rytShape1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/lnrFirstPositionCountry"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="@dimen/fifteen"
                android:weightSum="1"
                android:background="@drawable/country_shape_one"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrSecondPositionCountry"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/country_shape_four"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrThirdPositionCountry"
                android:layout_width="100dp"
                android:weightSum="1"
                android:layout_height="100dp"
                android:layout_marginEnd="@dimen/fifteen"
                android:layout_alignParentRight="true"
                android:background="@drawable/country_shape_two"
                android:orientation="vertical">


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rytShape2"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/ten"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/rytShape1">

            <LinearLayout
                android:id="@+id/lnrFourthPositionCountry"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/fifteen"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:background="@drawable/country_shape_five"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrFifthPositionCountry"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/country_shape_three"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrSixthPositionCountry"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/fifteen"
                android:layout_weight="1"
                android:background="@drawable/country_shape_six"
                android:orientation="vertical">

            </LinearLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>