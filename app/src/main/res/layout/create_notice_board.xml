<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <RelativeLayout
        android:id="@+id/rytHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:paddingVertical="@dimen/twenty"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:src="@drawable/arrow_back_black" />

        <TextView
            android:id="@+id/lblCreateNoticeBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten"
            android:layout_toEndOf="@+id/imgBack"
            android:text="Notice Board"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnrParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/ten"
        android:layout_marginTop="@dimen/fifteen"
        android:background="@drawable/bg_light_blue"
        app:layout_constraintTop_toBottomOf="@+id/rytHeader">

        <TextView
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_blue"
            android:gravity="center"
            android:padding="@dimen/ten"
            android:text="Create"
            android:textColor="@color/white"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/ten"
            android:text="History"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rytHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/one_thirty"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/lnrParent">

        <RelativeLayout
            android:id="@+id/rytSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty_five"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/rect_grey"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ten"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/txtSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/imgSearch"
                android:background="@android:color/transparent"
                android:hint="@string/lblSearch"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rytSearch"
            tools:listitem="@layout/attendance_student_list" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/noticeboardCreate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/ten"
        android:layout_marginTop="@dimen/one_thirty"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/lnrParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_shadow_white"
            android:padding="@dimen/ten">

            <TextView
                android:id="@+id/lblEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblEventTitle"
                android:layout_marginTop="@dimen/fifteen"
                android:background="@drawable/bg_edittext_view_line"
                android:hint="eg.Result announcement"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp" />

            <TextView
                android:id="@+id/lblEventDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitle"
                android:layout_marginTop="@dimen/fifteen"
                android:text="Detail"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen_sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/rytDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblEventDesc"
                android:layout_marginTop="@dimen/fifteen"
                android:background="@drawable/bg_edittext_view_line">

                <EditText
                    android:id="@+id/txtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp" />

                <TextView
                    android:id="@+id/lbTextCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtDesc"
                    android:layout_alignParentEnd="true"
                    android:text="1 of 300"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rytDesc"
                android:layout_marginTop="@dimen/fifteen">

                <TextView
                    android:id="@+id/lblAddPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:text="ADD PHOTO"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/twenty"
                    android:layout_height="@dimen/twenty"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/ten"
                    android:src="@drawable/ic_photo" />


                <RelativeLayout
                    android:id="@+id/rytADD"
                    android:layout_width="@dimen/seventy"
                    android:layout_height="@dimen/seventy"
                    android:layout_below="@+id/lblAddPhoto"
                    android:layout_marginTop="@dimen/fifteen"
                    android:background="@drawable/rect_light_blue">

                    <ImageView
                        android:layout_width="@dimen/thirty"
                        android:layout_height="@dimen/thirty"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_plus" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImage1"
                    android:layout_width="@dimen/seventy"
                    android:layout_height="@dimen/seventy"
                    android:layout_below="@+id/lblAddPhoto"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_toEndOf="@+id/rytADD"
                    app:cardCornerRadius="@dimen/ten">

                    <ImageView
                        android:id="@+id/imgPick1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/schoolad" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImage2"
                    android:layout_width="@dimen/seventy"
                    android:layout_height="@dimen/seventy"
                    android:layout_below="@+id/lblAddPhoto"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_toEndOf="@+id/cardImage1"
                    app:cardCornerRadius="@dimen/ten">

                    <ImageView
                        android:id="@+id/imgPick2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/schoolad" />

                </androidx.cardview.widget.CardView>



                <RelativeLayout
                    android:id="@+id/rytEventDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rytADD"
                    android:layout_marginTop="@dimen/fifteen">

                    <TextView
                        android:id="@+id/lblDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:text="Date Time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/twenty"
                        android:layout_height="@dimen/twenty"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/ten"
                        android:src="@drawable/ic_date_time" />

                    <TextView
                        android:id="@+id/lblStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblDateTime"
                        android:layout_marginTop="@dimen/ten"
                        android:text="Start"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblStart"
                        android:layout_marginTop="@dimen/ten"
                        android:text="yyyy/mm/dd"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/thirteen_sp" />

                    <TextView
                        android:id="@+id/txtStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblStart"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/ten"
                        android:text="hh:mm"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/thirteen_sp" />


                    <TextView
                        android:id="@+id/lblEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtStartDate"
                        android:layout_marginTop="@dimen/ten"
                        android:text="End"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblEnd"
                        android:layout_marginTop="@dimen/ten"
                        android:text="yyyy/mm/dd"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/thirteen_sp" />

                    <TextView
                        android:id="@+id/txtEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblEnd"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/ten"
                        android:text="hh:mm"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/thirteen_sp" />


                    <TextView
                        android:id="@+id/btnNext"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fourty_five"
                        android:layout_below="@+id/txtEndDate"
                        android:layout_marginTop="@dimen/thirty"
                        android:background="@drawable/rect_btn_orange"
                        android:gravity="center"
                        android:text="NEXT"
                        android:textColor="@color/white"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="bold" />


                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>