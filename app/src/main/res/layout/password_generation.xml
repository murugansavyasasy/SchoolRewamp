<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_fifty"
            android:layout_marginTop="@dimen/twenty"
            android:adjustViewBounds="true"
            android:src="@drawable/login_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome back!"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:gravity="center"
            android:text="Your password has been securely stored and encrypted for protection. For security reasons, it cannot be displayed in plain text."
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_top_radious">

            <RelativeLayout
                android:id="@+id/rytMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten">

                <TextView
                    android:id="@+id/lblLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ResetThePassword"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twenty_sp" />

                <TextView
                    android:id="@+id/lblCreatePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblLogin"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/ResetThePassword"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_sp" />

                <RelativeLayout
                    android:id="@+id/rytMobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_below="@+id/lblCreatePassword"
                    android:layout_marginTop="@dimen/ten"
                    android:background="@drawable/rect_white">

                    <ImageView
                        android:id="@+id/imgHide1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/ten"
                        android:src="@drawable/password_hide" />

                    <EditText
                        android:id="@+id/txtCreatePassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="**********"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingHorizontal="@dimen/ten"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_gray_"
                        android:textSize="@dimen/thirteen_sp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/lblPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rytMobile"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/EnterTheConformPassword"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_sp" />


                <RelativeLayout
                    android:id="@+id/rytPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_below="@+id/lblPassword"
                    android:layout_marginTop="@dimen/ten"
                    android:background="@drawable/rect_white">


                    <EditText
                        android:id="@+id/txtConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="**********"
                        android:inputType="textPassword"
                        android:paddingHorizontal="@dimen/ten"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/thirteen_sp" />

                    <ImageView
                        android:id="@+id/imgHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/ten"
                        android:src="@drawable/password_hide" />

                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/btnCreate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_below="@+id/rytPassword"
                    android:layout_marginTop="@dimen/thirty"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    card_view:cardCornerRadius="@dimen/ten"
                    card_view:cardElevation="@dimen/five">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rect_btn_blue"
                        android:gravity="center"
                        android:padding="@dimen/fifteen"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>