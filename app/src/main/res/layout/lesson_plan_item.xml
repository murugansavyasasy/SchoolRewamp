<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ten">


    <RelativeLayout
        android:id="@+id/rlaHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_shadow_white">

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:gravity="center"
            android:text="Bio Chemistry"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/lblFromDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblTitle"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:text="11/11/1111"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="normal"

            ></TextView>


        <TextView
            android:id="@+id/lblTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblTitle"
            android:layout_marginStart="@dimen/twenty_sp"
            android:layout_marginTop="@dimen/ten"
            android:layout_toEndOf="@+id/lblFromDate"
            android:text="To"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp"
            android:textStyle="normal"></TextView>


        <TextView
            android:id="@+id/lblToTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblTitle"
            android:layout_marginStart="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:layout_toEndOf="@+id/lblTo"
            android:gravity="center"
            android:text="44/44/4444"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="normal"></TextView>


        <RelativeLayout
            android:id="@+id/rlaDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblToTime">


            <LinearLayout
                android:id="@+id/lnrUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/lblUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTitle"
                    android:layout_marginStart="@dimen/twenty"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_weight="0.3"
                    android:text="@string/Unti"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTitle"
                    android:layout_marginStart="@dimen/twenty"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_weight="0.46"
                    android:text=" : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/lblUnitValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTitle"
                    android:layout_marginStart="@dimen/twenty"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_weight="0.25"
                    android:text="Final"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="normal" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrUnit"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/lblRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTitle"
                    android:layout_marginStart="@dimen/twenty"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_weight="0.3"
                    android:text="@string/Remarks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTitle"
                    android:layout_marginStart="@dimen/twenty"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_weight="0.46"
                    android:text=" : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/lblRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTitle"
                    android:layout_marginStart="@dimen/twenty"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_weight="0.25"
                    android:text="Nothing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="normal" />

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/rytLessons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlaDetails"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgYetStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:src="@drawable/yet_to_start_grey" />

                <View
                    android:id="@+id/vwStageOne"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_weight="16"
                    android:background="@color/grey" />

                <ImageView
                    android:id="@+id/imgInProgress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:src="@drawable/inprogress_grey" />


                <View
                    android:id="@+id/vwStageTwo"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_weight="16"
                    android:background="@color/grey" />

                <ImageView
                    android:id="@+id/imgCompleted"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:src="@drawable/completed_grey" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblYetToStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="@string/Start"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/thirteen_sp" />

                <TextView
                    android:id="@+id/lblInProgress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="@string/Progress"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/thirteen_sp" />

                <TextView
                    android:id="@+id/lblCompleted"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:text="@string/Complete"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/thirteen_sp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:paddingHorizontal="2dp"
                    android:src="@drawable/edit_icon"
                    android:text="Edit"
                    android:textSize="14dp" />


                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:paddingHorizontal="2dp"
                    android:src="@drawable/delete_icon_"
                    android:text="Delete"
                    android:textSize="14dp" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>