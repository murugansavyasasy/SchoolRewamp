<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_fifty"
            android:layout_marginTop="@dimen/fifty"
            android:adjustViewBounds="true"
            android:src="@drawable/login_image" />

        <TextView
            android:id="@+id/lblEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:gravity="center"
            android:text="Your password has been securely stored and encrypted for protection. For security reasons, it cannot be displayed in plain text."
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_top_radious"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rytMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/twenty"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/txtOtp1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_margin="@dimen/five"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_sp" />

                <EditText
                    android:id="@+id/txtOtp2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_margin="@dimen/five"
                    android:layout_marginStart="@dimen/five"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_sp" />

                <EditText
                    android:id="@+id/txtOtp3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_margin="@dimen/five"
                    android:layout_marginStart="@dimen/five"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white"
                    android:inputType="number"
                    android:maxLength="1"

                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_sp" />

                <EditText
                    android:id="@+id/txtOtp4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_margin="@dimen/five"
                    android:layout_marginStart="@dimen/five"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_sp" />

                <EditText
                    android:id="@+id/txtOtp5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_margin="@dimen/five"
                    android:layout_marginStart="@dimen/five"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_sp" />

                <EditText
                    android:id="@+id/txtOtp6"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fourty_five"
                    android:layout_margin="@dimen/five"
                    android:layout_marginStart="@dimen/five"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white"
                    android:inputType="number"
                    android:maxLength="1"

                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/lblDidNot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblDidntreceive"
                    android:textColor="@color/white"
                    android:textSize="@dimen/thirteen_sp" />

                <TextView
                    android:id="@+id/lblOtpTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_toEndOf="@+id/lblDidNot"
                    android:text="00:00"
                    android:textColor="@color/dark_orange"
                    android:textSize="@dimen/fifteen_sp"
                    android:visibility="visible">

                </TextView>

                <TextView
                    android:id="@+id/lblResend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_toEndOf="@+id/lblDidNot"
                    android:text="Resend"
                    android:textColor="@color/dark_orange"
                    android:textSize="@dimen/fifteen_sp"
                    android:visibility="gone" />


            </RelativeLayout>


            <TextView
                android:id="@+id/lblContactTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:gravity="center"
                android:text="If you don't recive the otp please contact any of the  below number."
                android:textColor="@color/white"
                android:textSize="@dimen/thirteen_sp">

            </TextView>

            <TextView
                android:id="@+id/lblContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/ten"
                android:gravity="center"
                android:text="Contact Us?"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourty_five"
                android:layout_below="@+id/lblDidNot"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginTop="@dimen/thirty"
                android:layout_marginEnd="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                card_view:cardCornerRadius="@dimen/ten"
                card_view:cardElevation="@dimen/five">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rect_btn_blue"
                    android:gravity="center"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <com.vs.schoolmessenger.Utils.SpinningProgressBar
                android:id="@+id/isLoading"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:layout_below="@+id/lblDidNot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fourty_five"
                android:layout_marginBottom="@dimen/fifty"
                android:visibility="gone">

            </com.vs.schoolmessenger.Utils.SpinningProgressBar>


        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>