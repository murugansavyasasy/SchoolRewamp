<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rytHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:paddingVertical="@dimen/twenty">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:layout_marginStart="@dimen/twenty"
            android:src="@drawable/arrow_back_black" />

        <TextView
            android:id="@+id/lblCreateNoticeBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/ten"
            android:text="@string/Uploadimagepdf"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty"
            android:textStyle="bold" />


    </RelativeLayout>


    <TextView
        android:id="@+id/lblDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rytHeader"
        android:layout_marginStart="@dimen/twenty"
        android:layout_marginTop="@dimen/ten"
        android:text="@string/Description"
        android:textColor="@color/black"
        android:textSize="@dimen/thirteen_sp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/edtDescription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred"
        android:layout_below="@+id/lblDescription"
        android:layout_marginStart="@dimen/fifteen"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/fifteen"
        android:background="@drawable/bg_stroke_rect_black"
        android:editable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="start"
        android:hint="@string/Enterdescription"
        android:maxLength="100"
        android:padding="@dimen/ten"
        android:textColor="@color/black"
        android:textSize="@dimen/thirteen_sp"
        android:textStyle="normal">

    </EditText>

    <RelativeLayout
        android:id="@+id/rlaFilePicking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtDescription"
        android:layout_marginTop="@dimen/five"
       >

        <TextView
            android:id="@+id/lblAddPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:text="@string/AddPhoto"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/lmgCamera"
            android:layout_width="@dimen/twenty_five"
            android:layout_height="@dimen/twenty_five"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginEnd="@dimen/twenty"
            android:src="@drawable/camera_icon"></ImageView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcyImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lmgCamera"
            android:orientation="vertical">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
</RelativeLayout>