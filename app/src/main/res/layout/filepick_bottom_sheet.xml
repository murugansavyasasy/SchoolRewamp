<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_radious"
    android:orientation="vertical"
    android:padding="@dimen/five">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblChooseFileType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen"
            android:gravity="center"
            android:text="Pick your file type "
            android:textColor="@color/black"
            android:textSize="@dimen/twenty"
            android:textStyle="bold"></TextView>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblChooseFileType"
            android:layout_marginTop="@dimen/fifteen"
            android:orientation="horizontal"
            android:weightSum="3">


            <RelativeLayout
                android:id="@+id/rlaGallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ten"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgGallery"
                    android:layout_width="@dimen/fourty"
                    android:layout_height="@dimen/fourty"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/gallery_icon"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgGallery"
                    android:layout_marginTop="@dimen/ten"
                    android:gravity="center"
                    android:paddingBottom="@dimen/ten"
                    android:text="Gallery"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlaCamera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ten"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgCamera"
                    android:layout_width="@dimen/fourty"
                    android:layout_height="@dimen/fourty"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/camera_pick_icon"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgCamera"
                    android:layout_marginTop="@dimen/ten"
                    android:gravity="center"
                    android:paddingBottom="@dimen/ten"
                    android:text="Camera"

                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlaVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ten"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgVideo"
                    android:layout_width="@dimen/fourty"
                    android:layout_height="@dimen/fourty"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/video_icon"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgVideo"
                    android:layout_marginTop="@dimen/ten"
                    android:gravity="center"
                    android:paddingBottom="@dimen/ten"
                    android:text="Video"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    android:textStyle="bold">

                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>